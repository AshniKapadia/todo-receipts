{
  "name": "todo-receipts",
  "version": "2.0.0",
  "description": "Print beautiful thermal receipt-style to-do lists",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AshniKapadia/todo-receipts.git"
  },
  "bugs": {
    "url": "https://github.com/AshniKapadia/todo-receipts/issues"
  },
  "homepage": "https://github.com/AshniKapadia/todo-receipts#readme",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "todo-receipts": "./bin/todo-receipts.js"
  },
  "files": [
    "dist",
    "bin",
    "templates"
  ],
  "scripts": {
    "build": "tsc && mkdir -p dist/templates && cp src/templates/dashboard.html src/templates/dashboard.js dist/templates/",
    "start": "node bin/todo-receipts.js serve --no-browser",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "todo",
    "receipt",
    "thermal-printer",
    "dashboard",
    "sqlite",
    "cli"
  ],
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "better-sqlite3": "^11.9.0",
    "boxen": "^8.0.1",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "fs-extra": "^11.3.3",
    "jimp": "^1.6.0",
    "ora": "^9.1.0"
  },
  "optionalDependencies": {
    "usb": "^2.17.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.1.0",
    "typescript": "^5.9.3"
  }
}
